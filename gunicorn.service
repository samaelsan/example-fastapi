[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=samael
Group=samael
WorkingDirectory=/home/samael/app/src
Environment="PATH=/home/samael/app/venv/bin"
EnvironmentFile=/home/samael/.env
ExecStart=/home/samael/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target